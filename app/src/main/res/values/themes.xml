<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHandNationalAssembly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/deep_grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">@color/deep_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/deep_grey</item>
        <item name="android:actionBarTheme">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/deep_grey</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/deep_grey</item>
    </style>

    <style name="MainButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/main_btn_text_size</item>
        <item name="android:layout_width">@dimen/main_btn_size</item>
        <item name="android:layout_height">@dimen/main_btn_size</item>
        <item name="android:gravity">top</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingTop">@dimen/main_btn_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BillTableRow">
        <item name="android:paddingStart">@dimen/table_padding</item>
        <item name="android:paddingEnd">@dimen/table_padding</item>
        <item name="android:weightSum">5</item>
    </style>

    <style name="BillTableTextTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BillTableTextContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/table_content_margin</item>
        <item name="android:layout_weight">3.8</item>
    </style>

    <style name="BillTableTextContentFull">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
    </style>

    <style name="SpinnerLong">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SpinnerMedium">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextViewCardHeader1">
        <item name="android:textSize">@dimen/card_text_header1_size</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/dark_grey</item>
    </style>

    <style name="TextViewCardHeader2">
        <item name="android:textSize">@dimen/card_text_header2_size</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/dark_grey</item>
    </style>

    <style name="TextViewCardHeader3">
        <item name="android:textSize">@dimen/card_text_header3_size</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/dark_grey</item>
    </style>

    <style name="TextViewCardHeader4Normal">
        <item name="android:textSize">@dimen/card_text_header4_size</item>
        <item name="color">@color/dark_grey</item>
    </style>
</resources>