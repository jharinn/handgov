<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHandNationalAssembly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/deep_grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">@color/deep_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/deep_grey</item>
        <item name="android:actionBarTheme">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/deep_grey</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/deep_grey</item>
    </style>

    <style name="MainButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/main_btn_text_size</item>
        <item name="android:layout_width">@dimen/main_btn_size</item>
        <item name="android:layout_height">@dimen/main_btn_size</item>
        <item name="android:gravity">top</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingTop">@dimen/main_btn_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>